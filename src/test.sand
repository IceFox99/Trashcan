func hanoi(n, a, b, c) {
    if (n == 1)
        a + "---->" + c + "\n";
    else {
        hanoi(n - 1, a, c, b);
        hanoi(1, a, b, c);
        hanoi(n - 1, b, a, c);
    }
}

"-------------Let's play hanoi tower with 4-------------\n";
hanoi(4, "A", "B", "C");

